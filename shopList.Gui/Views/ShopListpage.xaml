<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shopList.Gui.Views.ShopListpage"
             Title="ShopListpage">
    <Grid
        RowDefinitions="auto,*"
        Padding="8"
        RowSpacing="6"
        >
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            RowDefinitions="auto,auto"
            ColumnDefinitions="auto,*,auto,auto"
            RowSpacing="4"
            ColumnSpacing="4">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="producto"
                VerticalOptions="Center"
              />
            <Entry
                Grid.Row="0"
                Grid.Column="1"
                BackgroundColor="Blue"
                />
            <Label
              Grid.Row="1"
              Grid.Column="0"
              Text="cantidad"
              VerticalOptions="Center"
  />
            <Entry
             Grid.Row="1"
             Grid.Column="1"
             BackgroundColor="Red"
    />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Text="+"/>
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="x"
                />
        </Grid>
        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            EmptyView="aun no se han registrado"
            BackgroundColor="Red">
            
        </CollectionView>
    </Grid>
</ContentPage>